# Program variables
export GNUPLOT_LIB=${HOME}/projects/scripts/gnuplot
export LAMMPS_HOME="${HOME}/projects/lammps"
export LAMMPS_POTENTIALS="${LAMMPS_HOME}/potentials"
export LAMMPS_PYTHON_TOOLS="${LAMMPS_HOME}/tools/python/pizza"
export TEC_360=/usr/local/tecplot360ex2020r1/bin
#export TEC_CHORUS_2018=/usr/local/tecplot/chorus_2018r1
export ELECTRON_TRASH=gvfs-trash # required for Atom to be able to delete files from tree view
export BH_FILTER="(ssh|ls|cd|history|exit|-p|bh|bashhub|vi)" # variable that filters what commands are saved to bashhub
export UNCRUSTIFY_CONFIG=$HOME/.uncrustify/config
export PROMPT_DIRTRIM=4 # Bash variable used to shorten shown paths. Used by the shorten_path.py script.
export AUTO_NTFY_DONE_IGNORE="ntfy emacs htop info less mail man meld most mutt nano screen ssh tail tmux top vi vim watch gnuplot testdisk ipython ipython3 gdb" # adds gnuplot to the list of programs to not alert for upon completion
export TESSDATA_PREFIX=/usr/local/share/tessdata # allows tesseract to determine what languages are available to it. See https://github.com/tesseract-ocr/tessdata to add more

# Path variables
export JAVA_HOME=/usr/java/jrel.8.0_121
export LAMMPS=${HOME}/projects/lammps/executables/
export LD_LIBRARY_PATH="${LD_LIBRARY_PATH}:/home/${USER}/.openmpi/lib/"
export OPENMPI_PATH=${HOME}/.openmpi/bin/
#export OVITO=/usr/local/ovito-2.8.2-x86_64
export PEACOCK="${HOME}/projects/moose/python/peacock"
export PYTHONPATH=/usr/bin:${HOME}/projects/moose/python:${HOME}/projects/scripts/python_modules:${PYTHONPATH}
export USER_SCRIPTS="${HOME}/projects/scripts/bin"
export GO_PATH=/usr/local/go/bin
export RUSTPATH=${HOME}/.cargo/bin
export QT_PATH=/usr/local/Qt-5.12.12/bin
export TEXLIVE_PATH=/usr/local/texlive/2022/bin/x86_64-linux
export TEXLIVE_MATHPATH=/usr/local/texlive/2022/texmf-dist/doc/man
export TEXLIVE_INFOPATH=/usr/local/texlive/2022/texmf-dist/doc/info

# System variables
export EDITOR=atom # default editor when commands require use of an editor
export FCEDIT=vi # editor to use when fc is run
export HAS_ALLOW_UNSAFE=y # for allowing 'unsafe' program versions for has
export HISTTIMEFORMAT="%h %d %H:%M:%S "
export HISTIGNORE="&:[ ]*:exit:ls:cd:history" # ignore the exit, ls, cd, and history commands in the history
export OMP_NUM_THREADS=4 # for threads per MPI task
export PS3=">> " # Used for the bash 'select' prompt

# useful color/character codes
RESET='\[\e[00m\]'
BLKBLD='\[\e[01;30m\]'
REDBLD='\[\e[01;31m\]'
GRNBLD='\[\e[01;32m\]'
YLWBLD='\[\e[01;33m\]'
BLUBLD='\[\e[01;34m\]'
PRPLBLD='\[\e[01;35m\]'
CYANBLD='\[\e[01;36m\]'
WHTEBLD='\[\e[01;37m\]'
FancyX='\342\234\227'
Checkmark='\342\234\223'

# Mac-specific variables
if [[ $(uname -s) == "Darwin" ]]; then
  export PYTHON3PATH=${HOME}/Library/Python/3.7/bin
  export CLICOLOR=1 # for colorizing ls output on mac
  export LSCOLORS=ExGxBxDxCxEgEdxbxgxcxd # same as above
fi

export MANPATH=${TEXLIVE_MATHPATH}:${MANPATH}
export INFOPATH=${TEXLIVE_INFOPATH}:${INFOPATH}
export PATH=${JAVA_HOME}/bin:${LAMMPS}:${LD_LIBRARY_PATH}:${OPENMPI_PATH}:${PEACOCK}:${PYTHON3PATH}:${USER_SCRIPTS}:${GO_PATH}:${RUSTPATH}:${TEC_360}:${QT_PATH}:${TEXLIVE_PATH}:${PATH}
