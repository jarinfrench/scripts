# Program variables
export GNUPLOT_LIB=${HOME}/projects/scripts/gnuplot
export LAMMPS_POTENTIALS="${HOME}/projects/lammps/potentials"
#export TEC_360_2018=/usr/local/tecplot/360ex_2018r1
#export TEC_CHORUS_2018=/usr/local/tecplot/chorus_2018r1
export ELECTRON_TRASH=gvfs-trash # required for Atom to be able to delete files from tree view

# Path variables
export JAVA_HOME=/usr/java/jrel.8.0_121
export LAMMPS=${HOME}/projects/lammps/src
export LD_LIBRARY_PATH="${LD_LIBRARY_PATH}:/usr/local/tecplot/360ex_2018r1/bin:/usr/local/tecplot/360ex_2018r1/bin/sys:/home/${USER}/.openmpi/lib/"
export OPENMPI_PATH=${HOME}/.openmpi/bin
export OVITO=/usr/local/ovito-2.8.2-x86_64
export PEACOCK="${HOME}/projects/moose/python/peacock"
export PYTHONPATH=${HOME}/projects/moose/python:${HOME}/projects/scripts/python_modules:${PYTHONPATH}
export PYTHON3PATH=${HOME}/Library/Python/3.7/bin
export USER_SCRIPTS="${HOME}/projects/scripts/bin"

# System variables
export EDITOR=atom # default editor when commands require use of an editor
export FCEDIT=vi # editor to use when fc is run
export HAS_ALLOW_UNSAFE=y # for allowing 'unsafe' program versions for has
export HISTTIMEFORMAT="%h %d %H:%M:%S "
export HISTIGNORE="&:[ ]*:exit:ls:history" # ignore the exit, ls, and history commands in the history
export OMP_NUM_THREADS=4 # for threads per MPI task

# Mac-specific variables
if [[ $(uname -s) == "Darwin" ]]; then
  export CLICOLOR=1 # for colorizing ls output on mac
  export LSCOLORS=ExGxBxDxCxEgEdxbxgxcxd # same as above
fi

export PATH=${JAVA_HOME}/bin:${LAMMPS}:${LD_LIBRARY_PATH}:${OPENMPI_PATH}:${OVITO}/bin:${PEACOCK}:${PYTHON3PATH}:${USER_SCRIPTS}:${PATH}
